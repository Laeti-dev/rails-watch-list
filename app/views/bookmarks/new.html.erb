<div class="container-fluid">
  <div class="d-flex flex-column align-items-center">
    <h1>Add a movie to your list !</h1>
    <div class="form-layout my-24px">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, :input_html =>{:class => 'mx-2 my-2'} %>
        <%= f.input :photo, as: :file, :input_html =>{:class => 'mx-2 my-2'} %>
        <%= f.input :comment %>
        <%= f.submit 'Add', :input_html =>{:class => 'mx-2 my-2'} %>
      <% end %>

      <%= link_to "Back", list_path(@list) %>
    </div>
  </div>
</div>
